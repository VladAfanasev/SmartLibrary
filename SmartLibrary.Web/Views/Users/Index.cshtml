@using SmartLibrary.Domain.Interfaces
@model IEnumerable<IUser>
@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<div class="mb-4">
    <a asp-action="Add" class="btn btn-primary">Add New User</a>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Is Active</th>
        <th>Registration Date</th>
        <th>Renewal Date</th>
        <th>Membership Type</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@(user.IsActive ? "Yes" : "No")</td>
                <td>@user.RegistrationDate.ToShortDateString()</td>
                <td>@user.RenewalDate.ToShortDateString()</td>
                <td>@user.MembershipTypeID</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="9">No users found.</td>
        </tr>
    }
    </tbody>
</table>